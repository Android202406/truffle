{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./lib",
    "outDir": "./build",
    "declarationDir": "./dist",
    "types": ["node", "jest"],
    "noImplicitThis": false,
    "paths": {
      "@truffle/promise-tracker": ["./lib"],
      "@truffle/promise-tracker/*": ["./lib/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["./lib/**/*.ts", "./typings/**/*.d.ts"]
}
