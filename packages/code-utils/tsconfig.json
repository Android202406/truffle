{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./build",
    "declarationDir": "./dist",
    "types": ["node", "mocha"],
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "paths": {
      "@truffle/code-utils": ["./src"],
      "@truffle/code-utils/*": ["./src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["./src/**/*.ts"]
}
