{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./lib",
    "outDir": "./build",
    "declarationDir": "./dist",
    "types": ["node"],
    "noImplicitAny": false,
    "paths": {
      "@truffle/dashboard-message-bus": ["./lib"],
      "@truffle/dashboard-message-bus/*": ["./lib/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["lib/**/*"],
  "references": [{ "path": "../dashboard-message-bus-common" }]
}
