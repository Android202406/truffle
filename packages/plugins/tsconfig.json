{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./lib",
    "outDir": "./build",
    "declarationDir": "./dist",
    "types": ["jest", "node"],
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "paths": {
      "@truffle/plugins": ["./lib"],
      "@truffle/plugins/*": ["./lib/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["./lib/**/*.ts"],
  "references": [{ "path": "../error" }]
}
