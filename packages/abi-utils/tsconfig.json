{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./lib",
    "declarationDir": "./dist",
    "outDir": "./build",
    "resolveJsonModule": true,
    "paths": {
      "@truffle/abi-utils": ["./lib"],
      "@truffle/abi-utils/*": ["./lib/*"],
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["./lib/**/*.ts"],
  "references": [
    { "path": "../webpack-test-helper" }
  ]
}
