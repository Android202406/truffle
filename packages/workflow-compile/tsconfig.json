{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./build",
    "declarationDir": "./dist",
    "types": ["node", "mocha"],
    "paths": {
      "@truffle/workflow-compile": ["./src"],
      "@truffle/workflow-compile/*": ["./src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "noImplicitAny": false,
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../artifactor" },
    { "path": "../compile-common" },
    { "path": "../compile-solidity" },
    { "path": "../config" },
    { "path": "../db-loader" },
    { "path": "../expect" },
    { "path": "../resolver" }
  ]
}
