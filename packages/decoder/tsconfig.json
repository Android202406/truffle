{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./lib",
    "outDir": "./build",
    "declarationDir": "./dist",
    "types": ["node", "mocha"],
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "paths": {
      "@truffle/decoder": ["../decoder/lib"],
      "@truffle/decoder/*": ["../decoder/lib/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["./lib/**/*.ts"],

  "references": [
    { "path": "../abi-utils" },
    { "path": "../codec" },
    { "path": "../compile-common" },
    { "path": "../encoder" },
    { "path": "../config" },
    { "path": "../migrate" },
    { "path": "../workflow-compile" }
  ]
}
