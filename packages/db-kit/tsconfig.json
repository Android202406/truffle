{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDirs": ["./src", "./bin"],
    "outDir": "./build",
    "declarationDir": "./dist",
    "types": ["jest", "react", "node"],
    "lib": ["esnext", "dom"],
    "jsx": "react",

    // when this was added there weren't any unused params in the source for
    // this module, however the build would still fail due to there being unused
    // params in the hkts module. I tried excluding it, skipping lib checks,
    // etc - nothing seemed to prevent it from evaluating and erroring out on
    // the hkts module :-(
    "noUnusedParameters": false,

    "noUncheckedIndexedAccess": false,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "paths": {
      "@truffle/db-kit": ["./src"],
      "@truffle/db-kit/*": ["./src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["src/**/*", "bin/**/*"],
  "references": [
    { "path": "../codec" },
    { "path": "../compile-common" },
    { "path": "../compile-solidity" },
    { "path": "../config" },
    { "path": "../db" },
    { "path": "../decoder" },
    { "path": "../fetch-and-compile" }
  ]
}
