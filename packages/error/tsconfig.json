{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2022"],
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "paths": {
      "@truffle/error": [ "./lib" ],
      "@truffle/error/*": [ "./lib/*" ]
    }
  },
  "include": [
    "./lib/**/*.ts",
    "./test/**/*.ts"
  ]
}
