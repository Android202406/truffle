{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./build",
    "declarationDir": "./dist",
    "types": ["node", "mocha"],
    "noImplicitThis": false,
    "noUncheckedIndexedAccess": false,
    "paths": {
      "@truffle/test": ["./src"],
      "@truffle/test/*": ["./src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "types": ["node", "mocha"],
  "include": ["src/**/*", "typings/*.d.ts"]
}
