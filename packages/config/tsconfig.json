{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./build",
    "declarationDir": "./dist",
    "types": ["node", "mocha"],
    "paths": {
      "@truffle/config": ["./src"],
      "@truffle/config/*": ["./src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["./src/**/*.ts", "./typings/**/*.d.ts"],

  "references": [{ "path": "../error" }]
}
