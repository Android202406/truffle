{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDirs": ["./lib", "./bin"],
    "outDir": "./build",
    "declarationDir": "./dist",
    "types": ["jest", "react", "node"],
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "noUnusedParameters": false,
    "paths": {
      "@truffle/dashboard": ["./lib", "./bin", "./src"],
      "@truffle/dashboard/*": ["./lib/*", "./bin/*", "./src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["lib/**/*", "bin/**/*"],
  "references": [
    { "path": "../dashboard-message-bus" },
    { "path": "../dashboard-message-bus-client" },
    { "path": "../dashboard-message-bus-common" }
  ]
}
