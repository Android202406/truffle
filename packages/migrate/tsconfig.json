{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./build",
    "declarationDir": "./dist",
    "types": ["node"],
    "noUncheckedIndexedAccess": false,
    "useUnknownInCatchVariables": false,
    "paths": {
      "@truffle/migrate": ["./src"],
      "@truffle/migrate/*": ["./src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["./src/**/*.ts"],
  "references": [
    { "path": "../config" },
    { "path": "../db-loader" },
    { "path": "../expect" },
    { "path": "../require" },
    { "path": "../resolver" },
  ]
}
