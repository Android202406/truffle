    "bn.js": "^5.1.3",
    "chai": "^4.2.0",
    "ethers": "^4.0.32",
    "ganache": "7.5.0",
    "mocha": "10.1.0",
    "ts-node": "10.7.0",
    "typescript": "^4.7.4",
    "web3": "1.7.4",
    "webpack": "^5.73.0",
