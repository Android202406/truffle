{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./lib",
    "outDir": "./build",
    "declarationDir": "./dist",
    "types": ["node", "mocha"],
    "noUncheckedIndexedAccess": false,
    "paths": {
      "@truffle/require": ["./lib"],
      "@truffle/require/*": ["./lib/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },

  "include": ["./lib/**/*.ts", "./typings/**/*.d.ts"],
  "exclude": ["./lib/sandboxGlobalContextTypes.ts"],
  "references": [
    { "path": "../config" },
    { "path": "../error" },
    { "path": "../expect" },
    { "path": "../interface-adapter" },
    { "path": "../resolver" }
  ]
}
