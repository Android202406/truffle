{
  "name": "@truffle/require",
  "description": "Require and execute a Javascript module within a Truffle context",
  "license": "MIT",
  "author": "Tim Coulter <tim@trufflesuite.com>",
  "homepage": "https://github.com/trufflesuite/truffle/tree/master/packages/require#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/trufflesuite/truffle.git",
    "directory": "packages/require"
  },
  "bugs": {
    "url": "https://github.com/trufflesuite/truffle/issues"
  },
  "version": "2.1.13",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "run-s build:compile build:bundle build:copyfiles",
    "build:compile": "ttsc -b .",
    "build:bundle": "cross-env NODE_ENV=production NODE_OPTIONS='--max-old-space-size=8192' webpack --config webpack.config.ts",
    "build:copyfiles": "copyfiles -f lib/sandboxGlobalContextTypes.ts dist",
    "prepare": "yarn build",
    "test": "mocha --require ts-node/register --extension ts,js"
  },
  "dependencies": {
    "@truffle/config": "^1.3.44",
    "@truffle/error": "^0.1.1",
    "@truffle/expect": "^0.1.3",
    "@truffle/interface-adapter": "^0.5.24",
    "@truffle/resolver": "^9.0.23",
    "original-require": "^1.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "~12.12.0",
    "@types/webpack": "~5.28.0",
    "copyfiles": "^2.4.1",
    "debug": "^4.3.1",
    "mocha": "10.1.0",
    "ts-node": "10.9.1",
    "typescript": "^4.7.4",
    "web3": "1.7.4",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.6.1",
    "webpack-cli": "^4.10.0"
  },
  "peerDependencies": {
    "ts-node": "*"
  },
  "peerDependenciesMeta": {
    "ts-node": {
      "optional": true
    }
  },
  "keywords": [
    "ethereum",
    "exec",
    "require",
    "truffle"
  ],
  "publishConfig": {
    "access": "public"
  }
}
