{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2016",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2016"],
    "rootDir": "lib",
    "types": ["node", "mocha"],
    "paths": {
      "@truffle/polyfills": [
        "lib/index",
        "dist/index"
      ],
      "@truffle/polyfills/*": [
        "lib/*",
        "dist/*"
      ],
      "error-cause": [
        "typings/error-cause",
        "../../node_modules/error-cause",
        "node_modules/error-cause",
      ],
      "error-cause/*": [
        "typings/error-cause/*",
        "../../node_modules/error-cause/*",
        "node_modules/error-cause/*",
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "../node_modules/@types",
      "typings"
    ]
  },
  "include": [
    "./lib/**/*.ts",
    "typings"
  ]
}
