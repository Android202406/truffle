{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./test",
     // test project - no need to emit files
    "noEmit": true,
    "types": ["jest", "node"],
    "paths": {
      "@truffle/dashboard-message-bus-e2e-test": ["./test"],
      "@truffle/dashboard-message-bus-e2e-test/*": ["./test/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
  },
  "include": [ "./test/**/*.ts" ],
  "references": [
    { "path": "../dashboard" },
    { "path": "../dashboard-message-bus" },
    { "path": "../dashboard-message-bus-client" },
    { "path": "../dashboard-message-bus-common" }
  ]
}
