{
  "name": "@truffle/profiler",
  "version": "0.1.36",
  "description": "Package for dealing with Solidity sources along with their Truffle artifacts",
  "license": "MIT",
  "homepage": "https://github.com/trufflesuite/truffle/tree/master/packages/profiler#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/trufflesuite/truffle.git",
    "directory": "packages/profiler"
  },
  "bugs": {
    "url": "https://github.com/trufflesuite/truffle/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "run-s build:compile build:bundle",
    "build:compile": "ttsc -b .",
    "build:bundle": "cross-env NODE_ENV=production NODE_OPTIONS='--max-old-space-size=8192' webpack --config webpack.config.ts",
    "prepare": "yarn build",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@truffle/contract-sources": "^0.2.0",
    "@truffle/expect": "^0.1.3"
  },
  "devDependencies": {
    "@truffle/config": "^1.3.44",
    "@types/node": "~12.12.0",
    "@types/webpack": "~5.28.0",
    "debug": "^4.3.1",
    "ts-node": "10.7.0",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.6.1",
    "webpack-cli": "^4.10.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
