{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "declaration": false,
    "noEmit": true,
    "paths": {
      "@truffle/abi-utils": ["./lib"],
      "@truffle/abi-utils/*": ["./lib/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "module": "commonjs",
      "suppressExcessPropertyErrors": true,
      "isolatedModules": false
    },
  },
  "include": ["./*.ts"]
}
